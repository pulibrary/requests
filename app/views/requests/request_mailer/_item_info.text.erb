===============================================
Items Requested
===============================================
<% @submission.items.each_with_index do |item, index| %>
  ========================
  Item <%= index+1 %>
  ========================
  <% unless item[:selected].empty? %>
    <% item.each do |key, value| %>
      <% unless key == "selected" %>
        <%= "#{key.capitalize}: #{value.html_safe}" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>