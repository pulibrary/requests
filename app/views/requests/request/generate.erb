<div class="col-md-12">
  <div class="row doc-<%= @request.system_id %>">
    <h1>Request Options for: <%= @request.display_metadata[:title].first %></h1>
    <p><%= current_user_status @user %></p>
    <%= render 'flash_messages' %>
  </div>
  <% if @request.has_requestable? %>
  <div class="row">
    <%= render "form" %>
  </div>
  <% else %>
  <div class="message">
    <p>See Circulation Desk, there are no requestable items for this record</p>
  </div>
  <% end %>
</div>