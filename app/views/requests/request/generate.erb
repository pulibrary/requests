<div class="col-12">
  <%# <div class="col-12"> %>
    <%# <div class="button--start-over"> %>
      <a class="btn btn-primary" id="returnToRecordLink"
        href="<%= @request.catalog_url%>"">
        <span class="icon-refresh"></span>
        <span class="d-lg-inline">
          Return to record
        </span>
      </a>
    <%# </div> %>
  <%# </div> %>
  <div class="doc-message-<%= @request.system_id %>">
    <h1>Requests during the upcoming holidays</h1>
    <p>Princeton University Library will be closed Dec. 24 through Jan. 3, reopening Jan. 4. The book pick-up, digitization/scanning, and reference services will not be available during this time. Please request digitization/scanning by Dec. 16. Final book pick-up date is Wed., Dec. 23, before 4 p.m.</p>
  </div>
    <div class="doc-<%= @request.system_id %>">
        <h1>
          <%= request_title %>
        </h1>
      </div>
      <div class="col-12">
        <div class="bibliographic">
          <%= @request.format_brief_record_display %>
        </div>
      </div>
      <%= render 'flash_messages' %>
    </div>
    <% if @request.requestable? %>
      <div class="col-12">
        <%= @request.patron_message %> </div>
        <%= render "form" %>
      </div>
    <% else %>
      <div class="message flash-alert">
        <p>See Circulation Desk, there are no requestable items for this record</p>
      </div>
    <% end %>
</div>
