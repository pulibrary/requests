  <td colspan="2" style="padding: 18px 18px 0;">
    <span style="font-size: 12px; display:block;">Location</span>
    <span style="font-size: 20px; font-weight:bold;text-transform: uppercase;display:block;">(<%= @submission.items.first["location_code"] %>) <%= @submission.items.first["call_number"]%></span>
  </td>
</tr>

<tr>
  <td colspan="2" style="padding: 18px;">
    <%= render 'bib_info' %>
  </td>
</tr>

<tr>
  <td colspan="2" style="padding: 0 18px;">
    <%= render 'item_info' %>
  </td>
</tr>

