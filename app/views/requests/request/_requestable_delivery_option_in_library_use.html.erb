      <div>
        <%= hidden_service_options requestable, fill_in: requestable.fill_in_pick_up? %>
        <%= hidden_field_tag "requestable[][fill_in]", requestable.fill_in_pick_up? %>
        <%= radio_button_tag "requestable[][delivery_mode_#{requestable.preferred_request_id}]", 'in_library', selected, data: { target: "#fields-print__#{requestable.preferred_request_id}" }, 'aria-controls' => "fields-print__#{requestable.preferred_request_id}", class: 'control-label' %>
        <%= label_tag "requestable[][delivery_mode_#{requestable.preferred_request_id}_in_library]", I18n.t("requests.recap_in_library.delivery_label"), class: 'control-label', id: "requestable__type_recap_label_#{requestable.preferred_request_id}" %>
        <div id="fields-print__<%=requestable.preferred_request_id%>" class="<%= pick_up_classlist(requestable, !selected) %>" >
          <ul class="service-list">
            <li><%= I18n.t("requests.recap_in_library.brief_msg") %> </li>
          </ul>
          <div id="fields-print__<%=requestable.preferred_request_id%>_card" class="card card-body bg-light">
            <% loc = pick_up_locations(requestable, default_pick_ups)[0] %>
            <%= hidden_field_tag "requestable[][pick_up]", "", value: (loc[:gfa_pickup]).to_s, class: 'single-pick-up-hidden' %>
            <%= label_tag "requestable[][pick_up]", "Pick-up location: #{loc[:label]}", class: 'single-pick-up' %>
            <p>After notification of your item's arrival at <%= pick_up_locations(requestable, default_pick_ups)[0][:label] %>, you will need to <a href="<%=requestable.libcal_url %>">make a study-browse appointment</a> to come into the Library to view it
          </div>
        </div>
      </div>
